{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "4.2.*"
	},
	"require-dev": {
    	"way/generators": "~2.0"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php",
	/**
	 * The statement written beneath is pointing to the "structure" repository created.
	 * A better approach needs to be found to autoload a file/folder.
	 *  It could be PSR-0 or PSR-4. Just needed to be sure. 
	 * @return the repository
	 */
			"app/structure"
	/**
	 * After this the "RepositoriesServiceProvider" has been created on the "structure/Repositories" folder
	 * So that the "UserRepositoryInterface" can easily be instantiated to use "MysqlUserRepository" 
	 */
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev",
	"prefer-stable":true
}
